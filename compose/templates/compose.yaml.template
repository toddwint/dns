name: ${HOSTNAME}

services:
  dns:
    image: toddwint/dns
    hostname: ${HOSTNAME}
    ports:
        - "${IPADDR}:${HTTPPORT1}:${HTTPPORT1}"
        - "${IPADDR}:${HTTPPORT2}:${HTTPPORT2}"
        - "${IPADDR}:${HTTPPORT3}:${HTTPPORT3}"
        - "${IPADDR}:${HTTPPORT4}:${HTTPPORT4}"
    networks:
        default:
            ipv4_address: ${IPADDR}
    environment:
        - MGMTIP=${MGMTIP}
        - GATEWAY=${GATEWAY}
        - HUID=${HUID}
        - HGID=${HGID}
        - HOSTNAME=${HOSTNAME}
        - TZ=${TZ}
        - HTTPPORT1=${HTTPPORT1}
        - HTTPPORT2=${HTTPPORT2}
        - HTTPPORT3=${HTTPPORT3}
        - HTTPPORT4=${HTTPPORT4}
        - APPNAME=${APPNAME}
    volumes:
      - "${PWD}/upload:/opt/${APPNAME}/upload"
    tty: true

networks:
    default:
        name: "${INTERFACE}-macvlan"
        external: true
